<!-- 投稿編集画面 -->
<div class="container">
		<div class="row text-center">
			<h1>Editing Book</h1>
		</div>
		<div class="row col-xs-offset-3 col-md-6">
		<%= form_for(@book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title, class: "col-xs-12" %>

		<h4>Opinion</h4>
		<%= f.text_area :body, class: "col-xs-12" %>

		<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
		<% end %>

		<%= link_to "Show", book_path %>
		|
		<%= link_to "Back", books_path %>
		</div>
<!-- ↓エラー -->
<% if @book.errors.any? %>
	<h3><%= @book.errors.count %>errorです。</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

</div>