<div class="body">
	<div class="container">
<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
<% end %>
<!-- ↓部分テンプレート呼び出し -->
<%= render 'books/list', book: @book, user: @book.user %>
<!-- 投稿詳細画面 -->
		<div class="row">
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td>
								<%= link_to user_path(@book.user.id) do %>
								<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
								<%= @book.user.name %>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(@book.id) do %>
								<%= @book.title %>
								<% end %>
							</td>
							<td><%= @book.body %></td>
						<% if @book.user == current_user %>
							<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
							<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
						<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>