<div class="body">
	<div class="container">
<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<!-- ↓部分テンプレート呼び出し入れる -->
<%= render 'books/list', book: @book, user: @user %>
<!-- ユーザーの詳細画面、ユーザーの投稿一覧 -->
		<div class="row">
			<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @user.books.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
			</div>
		</div>
	</div>
</div>